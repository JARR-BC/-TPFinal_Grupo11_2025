https://www.tinkercad.com/things/4M9Ob1nQ0ne/editel

// Primer Led y Boton
#define R1 6
#define G1 3
#define B1 5
#define button 2
// Segundo Led y Boton
#define R2 9
#define G2 10
#define B2 11
#define button2 4
// Tercer Led y Boton
#define R3 8
#define G3 12
#define B3 7
#define button3 13


// Variables de control
bool verdeActivo = false;
bool verdeActivo2 = false;
bool verdeActivo3 = false;
unsigned long tiempoInicio = 0;
unsigned long tiempoInicio2 = 0;
unsigned long tiempoInicio3 = 0;
const unsigned long DURACION_VERDE = 2000; // 2 seg
const unsigned long DURACION_VERDE2 = 2000;
const unsigned long DURACION_VERDE3 = 2000;

void setup() {
  pinMode(R1, OUTPUT);
  pinMode(G1, OUTPUT);
  pinMode(B1, OUTPUT);
  pinMode(R2, OUTPUT);
  pinMode(G2, OUTPUT);
  pinMode(B2, OUTPUT);
  pinMode(R3, OUTPUT);
  pinMode(G3, OUTPUT);
  pinMode(B3, OUTPUT);


  pinMode(button, INPUT_PULLUP); // Botón a GND
  pinMode(button2, INPUT_PULLUP); //Botón2 a GND
  pinMode(button3, INPUT_PULLUP); //Botón2 a GND
}

void loop() {
  int estadoBoton = digitalRead(button);
  int estadoBoton2 = digitalRead(button2);
   int estadoBoton3 = digitalRead(button3);
  
  // Si el botón se presiona (LOW porque usamos INPUT_PULLUP)
  if (estadoBoton == LOW && !verdeActivo) {
    verdeActivo = true;                   // Activamos modo verde
    tiempoInicio = millis();              // Guardamos el momento
  }

  // Si el modo verde está activo, verificamos si pasaron los 30 segundos
  if (verdeActivo) {
    digitalWrite(R1, 255);
    digitalWrite(G1, 0);
    digitalWrite(B1, 0);

    // Si pasaron 30 segundos, volver al rojo
    if (millis() - tiempoInicio >= DURACION_VERDE) {
      verdeActivo = false;
    }
  } else {
    // LED rojo por defecto
    digitalWrite(R1, 0);
    digitalWrite(G1, 255);
    digitalWrite(B1, 0);
 }
  
  // -----------------------------------------------------
  
 if (estadoBoton2 == LOW && !verdeActivo2) {
    verdeActivo2 = true;                   // Activamos modo verde
    tiempoInicio2 = millis();              // Guardamos el momento
  }

  // Si el modo verde está activo, verificamos si pasaron los 30 segundos
  if (verdeActivo2) {
    digitalWrite(R2, 255);
    digitalWrite(G2, 0);
    digitalWrite(B2, 0);

    // Si pasaron 30 segundos, volver al rojo
    if (millis() - tiempoInicio2 >= DURACION_VERDE2) {
      verdeActivo2 = false;
    }
  } else {
    // LED rojo por defecto
    digitalWrite(R2, 0);
    digitalWrite(G2, 255);
    digitalWrite(B2, 0);
  }

// ----------------------------------------------------------

 if (estadoBoton3 == LOW && !verdeActivo3) {
    verdeActivo3 = true;                   // Activamos modo verde
    tiempoInicio3 = millis();              // Guardamos el momento
  }

  // Si el modo verde está activo, verificamos si pasaron los 30 segundos
  if (verdeActivo3) {
    digitalWrite(R3, 255);
    digitalWrite(G3, 0);
    digitalWrite(B3, 0);

    // Si pasaron 30 segundos, volver al rojo
    if (millis() - tiempoInicio3 >= DURACION_VERDE3) {
      verdeActivo3 = false;
    }
  } else {
    // LED rojo por defecto
    digitalWrite(R3, 0);
    digitalWrite(G3, 255);
    digitalWrite(B3, 0);
  }
 }
